<!DOCTYPE html>
<html>
    <head>
        <title>Ra-law Projekt</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        <link rel="stylesheet " href="/main.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    </head>
    
    <body>
        
        <div class="container" id="link-div">
            <div id="center" class="row">
                <div class="col-md-6 col-sm-12">
                    <a class="link" href="/kontakty">Kontakty</a>
                </div>
                <div class="col-md-6 col-sm-12">
                    <a class="link" href="/kviz">Kvíz</a>
                </div>
            </div>
        </div>
        
        <div class="container" id="new-form">
            <form method="post" action="/kontakty">
                <div class="form-group">
                     <input class="form-control" type="text" placeholder="Jméno" required="" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" placeholder="E-mail" required="" name="email">
                </div>
                    <div class="form-group">
                <input class="form-control" type="text" placeholder="Telefon"  name="number">
                </div>
                <div class="form-group">
                     <button class="btn btn-primary btn-block">Přidat</button>
                </div>
            </form>
        </div>
        
        <hr>
        
        <div class="container contact-div">
             <div class="row" >
                 
                <% contacts.forEach(function(contact){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 contacts">
                    <h4 class="name"><%= contact.name %> 
                       <div id="icons">
                         <a href="/kontakty/<%= contact._id %>/edit"><span class="icon"><i class="fas fa-pen"></i></span></a>
                         <a href="/kontakty/<%= contact._id %>/delete"><span class="icon"><i class="fas fa-trash-alt"></i></span></a>
                        </div>
                    </h4>
                    <h4><%= contact.email %></h4>
                    <h4><%= contact.number %></h4>
                </div>
                <% }); %>
             </div>
        </div>

</body>
</html>
